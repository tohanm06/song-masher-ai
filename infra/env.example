# Core Settings
SIMPLE_MODE=false
ALLOW_AUDIO_STORAGE=false
ENVIRONMENT=development

# Storage Configuration
STORAGE_KIND=minio  # s3, minio, local

# Database
DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/postgres

# Redis
REDIS_URL=redis://redis:6379/0

# AWS S3 (if using S3)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=your_bucket_name
AWS_S3_REGION=us-east-1

# MinIO (if using MinIO)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=song-masher

# Local Storage (if using local)
LOCAL_STORAGE_PATH=./storage

# Audio Processing
SAMPLE_RATE=44100
TARGET_LUFS=-14.0
HEADROOM_DB=1.0

# Model Settings
DEMUCS_MODEL=htdemucs
DEMUCS_DEVICE=auto  # auto, cuda, cpu

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# Logging
LOG_LEVEL=INFO
